
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}


@model EBook.UI.Areas.Admin.Models.DTO.AppUserDTO

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/Add">Add AppUser</a></li>
        <li><a href="/Admin/AppUser/List">AppUser List</a></li>
        <li class="active">AppUser List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update AppUsers</h3>
                </div>
                <form action="/Admin/AppUser/Update" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">First Name</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Last Name</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="email" name="Email" value="@Model.Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="text">Password</label>
                            <input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="text">User Name</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Phone Number</label>
                            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" name="Address" value="@Model.Address" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" value="@Model.Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(EBook.Model.Option.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Gender">Gender</label>
                            <select name="Gender" value="@Model.Gender" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(EBook.Model.Option.Gender)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="file" name="Image" value="@Model.XSmallUserImage" class="form-control" />
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

